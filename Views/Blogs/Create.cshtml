@model blogging_platform.Models.Blog

@{
    ViewData["Title"] = "Create Blog";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">Create New Blog</h2>
                </div>

                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Blog Title -->
                        <div class="mb-3">
                            <label asp-for="title" class="form-label">Title</label>
                            <input asp-for="title" class="form-control" placeholder="Enter blog title" />
                            <span asp-validation-for="title" class="text-danger"></span>
                        </div>

                        <!-- Blog Content -->
                        <div class="mb-3">
                            <label asp-for="content" class="form-label">Content</label>
                            <textarea asp-for="content" class="form-control" rows="6" placeholder="Write your blog content here..."></textarea>
                            <span asp-validation-for="content" class="text-danger"></span>
                        </div>

                        <!-- Optional: Add Image Upload -->
                        <!--
                        <div class="mb-3">
                            <label for="ImageFile" class="form-label">Upload Image</label>
                            <input type="file" class="form-control" name="ImageFile" />
                        </div>
                        -->
                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">Create Blog</button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center">
                    <a asp-action="Index" class="text-success">Back to Blog List</a>
                </div>
            </div>

        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
